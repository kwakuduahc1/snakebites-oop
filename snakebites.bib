file = {:C\:/Users/Kwaku Duah/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Longkumer et al. - 2016 - Human, snake, and environmental factors in human - snake conflict in North Bihar - A one-year descriptive s(3).pdf:pdf},
issn = {2167-2415},
journal = {Christian Journal for Global Health},
